<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name = "bookObject" type = "com.canerture.booksapp.model.Books" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/yesil"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:padding="5dp"
                android:contentDescription="Book Image"/>

            <TextView
                android:id="@+id/bookNameText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_weight="0.25"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text="@{bookObject.book_name}"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/yesil"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookAuthorText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_weight="0.1"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text="@{bookObject.book_author}"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/yesil"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/bookPriceText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_weight="0.1"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text='@{bookObject.book_price + " â‚º"}'
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/yesil"
                android:textSize="14sp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>