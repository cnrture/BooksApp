<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bookModel"
            type="com.canerture.booksapp.model.Books" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_small"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:contentPadding="@dimen/padding_big"
        app:strokeColor="@color/eden"
        app:strokeWidth="@dimen/stroke_width_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bookImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/margin_very_small"
                android:layout_weight="0.8"
                android:contentDescription="@string/book_image_description" />

            <TextView
                android:id="@+id/bookNameText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_very_small"
                android:layout_weight="0.25"
                android:fontFamily="@font/amaranth_bold"
                android:gravity="center"
                android:text="@{bookModel.book_name}"
                android:textAlignment="center"
                android:textColor="@color/eden"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/bookAuthorText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_very_small"
                android:layout_weight="0.1"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text="@{bookModel.book_author}"
                android:textAlignment="center"
                android:textColor="@color/eden"
                android:textSize="@dimen/text_size_very_small" />

            <TextView
                android:id="@+id/bookPriceText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_very_small"
                android:layout_weight="0.1"
                android:fontFamily="@font/amaranth"
                android:gravity="center"
                android:text='@{bookModel.book_price + " â‚º"}'
                android:textAlignment="center"
                android:textColor="@color/eden"
                android:textSize="@dimen/text_size_very_small" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>